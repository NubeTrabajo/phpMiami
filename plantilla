							mes[10]="noviembre";
							mes[11]="diciembre";
						var fecha = new Date();
						var ano = dia[fecha.getDay()]+" en "+mes[fecha.getMonth()]+" en "+fecha.getFullYear();
						var hora = fecha.getHours()+":"+fecha.getMinutes()+":"+fecha.getSeconds();
						var fechaHora = ano+"<br/>"+hora
						document.getElementById("reloj").innerHTML = fechaHora;
					}
					setInterval(hora,1000);

